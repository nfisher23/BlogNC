
@{ Layout = null; }
@{
    string title = "Admin";
    if (!string.IsNullOrEmpty(ViewBag.Title)) { title = ViewBag.Title; }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0">
    <title>@title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/admin-styles.css" asp-append-version="true" rel="stylesheet" />
</head>
<body>
    <!--Top nav-->
    <nav class="navbar navbar-dark sticky-top bg-dark flex-lg-nowrap p-0">
        <a class="navbar-brand col-md-3 col-lg-2 mr-0" asp-action="Home"
           asp-controller="Admin">

            <img src="~/imgs/blog-nc-logo-inverted.svg"
                 asp-append-version="true" width="190" height="62" />
        </a>
        <ul class="navbar-nav px-3">
            <li class="nav-item text-nowrap lead">
                <a class="nav-link" asp-action="SignOut" asp-controller="Account">Sign out</a>
            </li>
        </ul>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block bg-light sidebar mt-5">
                <div class="sidebar-sticky mt-5">
                    <ul class="nav flex-column">
                        <li class="nav-item mt-2">
                            <a class="nav-link" asp-action="Home"
                               asp-controller="Admin" asp-area="NCAdmin">
                                Home
                            </a>
                        </li>
                    </ul>

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-2 text-muted">
                        <span class="border-bottom pb-1">Static Pages</span>
                    </h6>
                    <ul class="nav flex-column mb-2">
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                Manage Static Pages
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="EditStaticPage">
                                Make New Static Page
                            </a>
                        </li>
                    </ul>
                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-2 text-muted">
                        <span class="border-bottom pb-1">Blog</span>
                    </h6>
                    <ul class="nav flex-column mb-2">
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                Manage Posts
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                Manage Drafts
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" 
                               asp-action="EditPublishedPost" asp-controller="Admin">
                                Make New Post
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" 
                               asp-action="EditBlogPostDraft" asp-controller="Admin">
                                Make New Draft
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main role="main" class="col-md-9 ml-md-auto col-lg-10 pt-3 px-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
                    <h1 class="h2">BlogNC Dashboard</h1>
                </div>
                @RenderBody()

            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.slim.min.js"></script>
    <script src="~/lib/popper.js/dist/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>

</html>

