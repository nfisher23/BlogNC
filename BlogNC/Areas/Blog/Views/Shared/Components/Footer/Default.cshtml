@model FooterViewModel

<footer class="jumbotron-fluid bg-secondary mb-0 pb-4 pt-4 mt-3">
    <div class="col-md-8">
        <div class="container text-center">
            <ul class="list-inline list-unstyled justify-content-start align-items-center mb-0">
                @foreach (var sp in Model.QualifyingStaticPages)
                {
                    <li class="list-inline-item ml-5">
                        <a asp-action="FindStaticPage" asp-controller="StaticPages"
                           asp-area="Blog" asp-route-urlTitle="@sp.UrlTitle"
                           class="text-custom-light-footer">
                            @sp.PageTitle
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</footer>